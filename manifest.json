{

  "manifest_version": 2,
  "name": "PayWall",
  "version": "1.0",

  "description": "Helps tell you what websites use pay walls.",

  "icons": {
    "48": "icons/48x48.png",
    "96": "icons/96x96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["paywall.js"]
    }
  ],

  "permissions": [
    "*://google.com/*",
    "webRequest",
    "storage",
    "*://localhost/*",
    "<all_urls>"
  ],

  "applications": {
    "gecko": {
      "id": "hello@paywall.com"
    }
  }

}
